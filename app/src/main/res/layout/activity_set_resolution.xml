<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAFA">

    <include
        android:id="@+id/title_bar"
        layout="@layout/title_bar" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="设置分辨率"
        android:textSize="20sp"
        android:textColor="#000000"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"/>
    <RadioGroup
        android:id="@+id/rg_sresolution"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/rb_resolution_low"
            android:layout_width="220dp"
            android:layout_height="80dp"
            android:background="@drawable/selector_resolution_bg"
            android:button="@null"
            android:checked="true"
            android:gravity="center"
            android:text="640*480"
            android:textColor="@drawable/selector_resolution_textcolor"
            android:textSize="20sp" />

        <RadioButton
            android:id="@+id/rb_resolution_middle"
            android:layout_width="220dp"
            android:layout_height="80dp"
            android:background="@drawable/selector_resolution_bg"
            android:button="@null"
            android:gravity="center"
            android:text="1280*720"
            android:textColor="@drawable/selector_resolution_textcolor"
            android:textSize="20sp" />

        <RadioButton
            android:id="@+id/rb_resolution_high"
            android:layout_width="220dp"
            android:layout_height="80dp"
            android:background="@drawable/selector_resolution_bg"
            android:button="@null"
            android:gravity="center"
            android:text="1920*1080"
            android:textColor="@drawable/selector_resolution_textcolor"
            android:textSize="20sp" />
    </RadioGroup>
</RelativeLayout>