<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/iv_seg_option"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:src="@mipmap/iv_seg_blackwhite"
        android:layout_centerHorizontal="true"
        android:padding="4dp"/>
    <ImageView
        android:id="@+id/iv_seg_option_checked"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:src="@mipmap/iv_seg_checked"
        android:layout_centerHorizontal="true"/>
    <TextView
        android:id="@+id/tv_seg_option"
        android:layout_below="@id/iv_seg_option"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="黑白抠像"
        android:textSize="7sp"
        android:textColor="#2E2932"
        android:layout_marginTop="5dp"
        android:layout_centerHorizontal="true"/>
</RelativeLayout>